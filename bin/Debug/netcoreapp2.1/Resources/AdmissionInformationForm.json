{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "Admission Information Form",
      "horizontalAlignment": "Center"
    },
    {
      "type": "Input.Text",
      "placeholder": "Enter full name",
      "style": "text",
      "maxLength": 0,
      "id": "fullName",
      "color": "Red"
    },
    {
      "type": "Input.Text",
      "placeholder": " Enter your mobile number",
      "style": "text",
      "maxLength": 0,
      "id": "mobileNumber",
      "color": "Red"
    },
    {
      "type": "Input.Text",
      "placeholder": "Enter your email",
      "style": "email",
      "maxLength": 0,
      "id": "email"
    }
    
   

  ],
  "actions": [
    {
      "type": "Action.Submit",
      "id": "Submit",
      "title": "Submit",
      "data": {
        "Submit": "Submit"
      }
    }
  ]
}